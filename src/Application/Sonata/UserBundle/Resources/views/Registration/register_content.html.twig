{% extends 'base.html.twig' %}

{% block fos_user_content %}
    <div class="panel panel-success">
        <div class="panel-heading">
            <h2 class="panel-title">{{ 'registration'|trans({}, 'SonataUserBundle') }}</h2>
        </div>
        <div class="panel-body">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
                            {{ form_widget(form) }}
                <div class="form-actions">
                    <input type="submit" value="{{ 'submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-success pull-right" />
                </div>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}